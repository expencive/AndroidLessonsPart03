<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.startandroid.cif005sharedpreferences.MainActivity">

    <TextView
        android:id="@+id/tvSavedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Здесь будет текст"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"

        />

    <EditText
        android:id="@+id/etTextInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTextInsert2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTextInsert3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnApplyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Применить изменения"
        android:layout_gravity="center_horizontal"
        />
    <Switch
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btnSaveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Сохранить текст"/>

</LinearLayout>
