<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.startandroid.cif018alarmmanager.MainActivity">

    <TextView
        android:id="@+id/tvAlarmInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Будильник не установлен"
        android:textSize="30sp"
        android:layout_above="@+id/btnOpenPicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

    <Button
        android:id="@+id/btnOpenPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Установить будильник"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAlarmCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить будильник"
        android:layout_below="@+id/btnOpenPicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />




</RelativeLayout>
